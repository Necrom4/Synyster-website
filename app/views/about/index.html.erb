<% content_for :title, "Synyster - #{t('meta.title.about').capitalize}" %>
<% content_for :description, "#{t('meta.description.about')}" %>
<%= tag.h1 t('header.about').html_safe, class: "visually-hidden" %>
<%= image_tag @background, id: "bg_image" %>
<div id="spacer", style="height: 6rem;"></div>
<%= image_tag @logo, id: "floating-logo", class: "px-4 w-100" %>
<div class="content w-100 pt-0 p-4 p-md-0">
  <div class="row row-cols-5 g-2 my-4 gallery">
    <%= render partial: 'band_member', collection: @band_members, as: :member %>
  </div>
  <%= image_tag @band, class: "img-fluid mx-5 mb-5 rounded-2", id: "band_picture" %>
  <%= tag.p t('about.band_description').html_safe, id: "band_description", class: "mb-5 fs-4 fw-normal" %>
</div>
