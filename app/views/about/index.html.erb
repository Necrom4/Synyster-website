<% content_for :title, "Synyster - #{t('meta.title.about').capitalize}" %>
<% content_for :description, "#{t('meta.description.about')}" %>
<%= tag.h1 t('header.about').html_safe, class: %w[visually-hidden] %>
<%= image_tag @background, id: "bg_image" %>
<div id="spacer", style="height: 6rem;"></div>
<%= image_tag @logo, id: "floating-logo", class: %w[w-75] %>
<%= tag.div class: %w[row row-cols-5 g-2 my-4 gallery] do %>
	<%= render partial: 'band_member', collection: @band_members, as: :member %>
<% end %>
<%= image_tag @band, class: %w[img-fluid mx-5 mb-5 w-75 border border-2 rounded-4], id: "band_picture" %>
<%= tag.p t('about.band_description').html_safe, id: "band_description", class: %w[m-3 m-sm-5 px-sm-5 mb-5 fs-4 fw-normal] %>
